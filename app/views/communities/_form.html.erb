<%= form_for @community, html: { class: "form-horizontal community" } do |f| %>

  <!-- Errors -->
  <% if @community.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@community.errors.count, "error") %> prohibited this community from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @community.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <!-- Name -->
  <div class="form-group">
    <%= f.label :name, class: "control-label col-xs-3" %>
    <div class="col-xs-7">
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <%= f.error_span(:name) %>
  </div>

  <!-- Cap -->
  <div class="form-group">
    <%= f.label :cap, class: "control-label col-xs-3" %>
    <div class="col-xs-7">
      <%= f.number_field :cap, class: "form-control", placeholder: 'Cents per person unit' %>
    </div>
    <%= f.error_span(:cap) %>
  </div>

  <!-- Submit / Cancel buttons -->
  <div class="form-group">
    <div class="col-xs-offset-3 col-xs-9">
      <%= f.submit nil, class: "btn btn-primary" %>
      <%= link_to 'Cancel', communities_path, class: "btn btn-default" %>
    </div>
  </div>

<% end %>
