<%= simple_form_for @community, url: { action: lambda { @community.new_record? ? "create" : "update" }.call }, html: { class: "form-horizontal community" } do |f| %>

  <!-- Errors -->
  <% if @community.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@community.errors.count, "error") %> prohibited this community from being <%= @community.new_record? ? 'created' : 'updated' %>:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @community.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <!-- Name -->
  <div class="form-group">
    <%= f.label :name, required: false, class: "control-label col-xs-3" %>
    <div class="col-xs-7">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <!-- Cap -->
  <div class="form-group">
    <%= f.label :cap, class: "control-label col-xs-3" %>
    <div class="col-xs-7">
      <%= f.number_field :cap, class: "form-control", placeholder: 'Cents per person unit' %>
    </div>
  </div>

  <!-- Rotation Length -->
  <div class="form-group">
    <%= f.label :rotation_length, class: "control-label col-xs-3" %>
    <div class="col-xs-7">
      <%= f.number_field :rotation_length, class: "form-control", placeholder: 'How many meals are in a rotation?' %>
    </div>
  </div>

  <!-- Submit / Cancel buttons -->
  <div class="form-group">
    <div class="col-xs-offset-3 col-xs-9">
      <%= f.submit nil, class: "btn btn-primary" %>
      <%= link_to 'Cancel', communities_path, class: "btn btn-default" %>
    </div>
  </div>

<% end %>
