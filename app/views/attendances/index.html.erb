<p id="notice"><%= notice %></p>

<h1>Attendances</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Multiplier</th>
      <th>Is guest</th>
      <th>Resident</th>
      <th>Meal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.name %></td>
        <td><%= attendance.multiplier %></td>
        <td><%= attendance.is_guest %></td>
        <td><%= attendance.resident.name %></td>
        <td><%= attendance.meal.date %></td>
        <td><%= link_to 'Show', attendance %></td>
        <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
        <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attendance', new_attendance_path %>
