<div class="nested-fields">
  <div class="form-group">
    <div class="col-xs-offset-3 col-xs-8">
      <%= f.input :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>

  <div class="form-group">
    <div class="col-xs-offset-3 col-xs-8">
      <%= f.input :multiplier, :class => 'form-control' %>
    </div>
    <%=f.error_span(:multiplier) %>
  </div>

  <div class="form-group">
    <div class="col-xs-offset-3 col-xs-8">
      <%= f.association :resident, :class => 'form-control' %>
    </div>
    <%=f.error_span(:resident) %>
  </div>

  <div class="form-group">
    <div class="col-xs-offset-3 col-xs-9">
      <%= link_to_remove_association "remove guest", f, :class => 'btn btn-danger' %>
    </div>
  </div>
</div>
