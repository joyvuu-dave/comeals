<%- model_class = Meal -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @meal.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cap) %>:</strong></dt>
  <dd><%= number_to_currency(@meal.cap/100.to_f) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cost) %>:</strong></dt>
  <dd><%= number_to_currency(@meal.cost/100.to_f) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:multiplier) %>:</strong></dt>
  <dd><%= @meal.multiplier %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              meals_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_meal_path(@meal), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              meal_path(@meal),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
