<div class="page-header">
  <h1>Units</h1>
</div>

<%= link_to('New', new_unit_path, class: "btn btn-primary") if @admin %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th><%= 'Actions' if @admin %></th>
    </tr>
  </thead>
  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.name %></td>
        <td>
          <%= link_to('Edit',
                      edit_unit_path(unit),
                      class: "btn btn-default btn-xs") if @admin %>
          <%= link_to('Delete',
                      unit_path(unit),
                      method: :delete,
                      data: { confirm: 'Are you sure?' },
                      class: "btn btn-xs btn-danger") if @admin %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @units %>
